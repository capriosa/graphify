<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.graphify" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <hook src="hooks/hookers.js" type="before_prepare"/>
    <hook src="hooks/beforedep.js" type="before_deploy"/>
    <name>graphify</name>
    <description>
        Cordova project with Framework7, Vue and GraphCMS!
    </description>
    <author email="meinolf.droste@mdwp.de" href="https://mdwp.de">
        Meinolf Droste - mdwp
    </author>
    <content src="index.html"/>
    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>
    <platform name="android">
        <allow-intent href="market:*"/>
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*"/>
        <allow-intent href="itms-apps:*"/>
    </platform>
    <allow-navigation href="*"/>
    <plugin name="cordova-plugin-whitelist" spec="1"/>
    <engine name="android" spec="^7.0.0"/>
</widget>
